rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Helper function to check if this is the first admin setup
    function isFirstAdminSetup() {
      return !exists(/databases/$(database)/documents/system/config);
    }

    // System configuration
    match /system/config {
      allow read: if isAdmin();
      allow create: if isFirstAdminSetup() && request.auth != null;
      allow update, delete: if false;
    }

    // Categories collection rules
    match /categories/{categoryId} {
      allow read: if true; // Anyone can read categories
      allow write: if isAdmin(); // Only admins can create/update/delete categories
    }

    // Tools collection rules
    match /tools/{toolId} {
      allow read: if true; // Anyone can read tools
      allow write: if isAdmin(); // Only admins can create/update/delete tools
    }

    // Admins collection rules
    match /admins/{adminId} {
      allow read: if request.auth != null && (request.auth.uid == adminId || isAdmin());
      allow create: if 
        (isFirstAdminSetup() && request.auth != null && request.auth.uid == adminId) ||
        (isAdmin() && request.auth.uid != adminId);
      allow update: if isAdmin() && request.auth.uid != adminId;
      allow delete: if isAdmin() && request.auth.uid != adminId;
    }

    // Activity logs collection rules
    match /activity_logs/{logId} {
      allow read: if isAdmin();
      allow create: if isAdmin();
      allow update, delete: if false; // Logs cannot be modified or deleted
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 